<div class="col-md-5">

<h1>Blog Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li><%= link_to post.title, post_path(post) %></li>
  <% end %>
</ul>

<% if current_user.admin === true %>
<h1>Admin</h1>

<hr>

<%= link_to "Add a new post", new_post_path, :class => "btn btn-success btn-sm" %>
<hr>

<%= link_to "Edit Users", users_path %>
<% end %>
</div>
