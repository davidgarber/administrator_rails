<%= render('layouts/errors', :object => @comment) %>

<%= bootstrap_form_for [@post, @comment], remote: true do |f| %>
<div class="form-group">
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.text_area(:comment, cols: 5, rows: 5) %>
</div>
<%= f.submit class: "btn btn-success" %>
<% end %>
